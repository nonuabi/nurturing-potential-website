<div id="container">
  <div id="left-section">
    <img
      src="https://nurturing-potential-website.s3.ap-south-1.amazonaws.com/images/HealthyTalk-VickiTurner.jpg"
      alt="contact us"
    />
  </div>
  <div id="right-section">
    <h1>Don't be shy, get in touch!</h1>
    <%= render "form", contact: @contact %>
  </div>
</div>


<section id="contact-details-section">
  <div id="contact-details">
    <div id="headings">
      <h1 id="contact-heading"
      >Want to talk to us direct?</h1>
      <h1
      id="contact-subheading"
      >No Problem!</h1>
    </div>
    <div id="detail-sections">
      <div id="phone">
        <h2>Call us</h2>
        <p>Give us a call - always happy to talk to you!</p>
        <p 
          id="phone-number"
        >123-456-7890</p>
      </div>
      <div id="email">
        <h2>Email us</h2>
        <p>Drop us an note - we'll get back to you asap!</p>
        <p
        id="email-address"
        >hello@priyanka.co.uk</p>
      </div>
    </div>
  </div>
</section>

<script>
  gsap.from("#left-section img", {
    duration: 2,
    y: 100,
    opacity: 0,
    ease: "power2.out",
  });

  gsap.from("#headings h1", {
    duration: 2,
    y: 100,
    opacity: 0,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#headings",
      start: "top 80%",
    },
  });

  gsap.from("#detail-sections div", {
    duration: 2,
    y: 100,
    opacity: 0,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#detail-sections",
      start: "top 80%",
    },
  });
</script>